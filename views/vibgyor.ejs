<%-include("header")-%>
    <div class="right ">
        <h1 class="homeHeader">
            <img src="/college/a.jpg" alt="">
            Welcome to IIT ROPAR
            <div class="login" >
                <a href="/login">Login/Register</a> 
            </div>
        </h1>
        <div class="content">
            <h3>About Vibgyor Club</h3>
            <p>
                Let your fine artist color this website with your art.
                The Vibgyor Club is here for your to ensure your inner fine-artist gets a clear and clean platform for broadcasting their creation.
                Enter your entries by clicking the button below and make your network stronger and find your friends with similar interests.
            </p>
            <%posts.forEach(function(post){%>
                <div class="post">
                    <div class="heading">
                        <div class="_name"><%=post.name%></div>
                        <div class="_time">#<%=post.time%></div>
                    </div>
                    <div class="image">
                        <img src="/vibgyorUploads/<%=post.image%>" alt="." style: height="300 rem">
                    </div>
                    
                </div>
            <%})%>
        </div>
        <div class="_btn">
            <a href="/vibgyor/vibgyorUpload" class="btn">Upload Your Content <i class="fa-solid fa-arrow-up-from-bracket"></i></a>
        </div>  
       
        
    </div>
<%-include("footer")-%>
